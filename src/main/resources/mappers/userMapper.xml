<?xml version="1.0" encoding="UTF-8"?>


<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.jhb0430.blastagram.user.repository.UserRepository">
 
 	<insert id="insertUser" parameterType="map">
 		INSERT INTO 
 				`user`
			(
				`email`
				,`phoneNumber`
				, `password`
				, `name`
				, `userId`
			)
			VALUE
			(
				#{email}
				,#{phoneNumber}
				,#{password}
				,#{name}
				,#{userId}
			)
 				
 	</insert>
 	
 	<select id="selectLoginUser" resultType="com.jhb0430.blastagram.user.domain.User">
	 	SELECT 
			`email`
			,`phoneNumber`
			, `userId`
			, `password`
		FROM 
			`user`
		WHERE 
			(
			`email` = #{email} 
			OR 
			`phoneNumber` = #{phoneNumber}
			OR 
			`userId` = #{userId}
			)
			AND 
			`password` = #{password};
 	</select>
 	
 	
 	<select id="selectCountId" parameterType="string" resultType="int">
	 	SELECT 
				count(*)
			FROM 
				`user`
			WHERE 
				`email` = #{email} 
			OR 
			`phoneNumber` = #{phoneNumber};
 	</select>
 	
 	
 </mapper>